{
  "description": "Build CentOS 8 Stream x86_64 Mate workstation",
  "variables": {
      "proxy": "{{ env `http_proxy` }}"
  }, 
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "centos8-stream-gui",
      "output_dir": "./centos8-stream-mate",
      "box_name": "centos8-stream-mate",
      "provider": "virtualbox",
      "skip_add": true,
      "type": "vagrant"
    } 
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/mate.sh"
      ],
      "environment_vars": [
        "http_proxy={{ user `proxy` }}"
      ],
      "override": {
        "vagrant": {
          "execute_command": "echo 'vagrant'|sudo -S {{ .Vars }} bash '{{.Path}}'"
        }
      }
    }
  ]
}
