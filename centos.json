{
  "description": "Build base CentOS 8 Stream x86_64",
  "variables": {
      "guest_additions": "disable",
      "iso_name": "CentOS-Stream-8-x86_64-20191219-boot.iso",
      "iso_path": "/sw/centos",
      "iso_url": "https://mirrorlist.centos.org/pub/centos/8-stream/isos/x86_64/CentOS-Stream-8-x86_64-20191219-boot.iso",
      "kickstart": "kickstart.cfg",
      "proxy": "{{ env `http_proxy` }}"
  },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/01sshd.sh",
        "scripts/02vagrant.sh",
        "scripts/90virtualbox.sh",
        "scripts/98cleanup.sh",
        "scripts/99minimize.sh"
      ],
      "environment_vars": [
        "http_proxy={{ user `proxy` }}",
        "guest_additions_mode={{ user `guest_additions` }}"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S {{ .Vars }} bash '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_mode": "{{ user `guest_additions` }}",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "disk_size": 16384,
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "3e80a092e15d7c96105aa995c4f92f1c08361cea4f75204bdbe51a1155359386",
      "iso_checksum_type": "sha256",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "15m",
      "shutdown_command": "echo 'vagrant'| sudo -S /sbin/poweroff",

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `kickstart` }}<enter>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>"
      ],

     "hard_drive_interface": "sata",
     "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile",
      "output": "{{ user `box_name` }}.box"
    }]
  ]
}
